/*Pomodoro timer. Have a rest for 5 minutes after 20 minutes of work.Digital blink of built-in LED.*/const int ledPin = 13; // Led on 13th pinlong int workTime = 1200000; // 20 Minutes = 1200000 Milliseconds, Time of workconst byte delayTime = 100; // 1 second = 1000 Milliseconds, Time of blinkvoid setup() {  // put your setup code here, to run once:  pinMode(ledPin, OUTPUT);}void loop() {  // put your main code here, to run repeatedly:  digitalWrite(ledPin, LOW);  delay(workTime); // Work  digitalWrite(ledPin, HIGH);  long finishTime = 300000; // 5 Minutes = 300000 Milliseconds, declare local variable, time of rest  for (long i = 0; i <= finishTime; i++) { // Rest  digitalWrite(ledPin, HIGH);  delay(delayTime);  digitalWrite(ledPin, LOW);  delay(delayTime);  finishTime = finishTime - (delayTime * 2);  }}